<h1> Sup Fam let's register</h1>
    <form class="form" id = register action = "/sessions" method = "post ">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
    <label>First Name</label>
    <input type = "text" name="user[first_name]">
    <label> Last Name</label>
    <input type = "text" name = "user[last_name]">
    <label> Email </label>
    <input type = "text" name = "user[email]">
    <label> Location </label>
    <input type = "location" name = "user[location]">
    <label> State </label>
 <%=select_tag 'State', options_for_select(us_states),:name=>"user[state]",:id=>"state"%> 
    <label> Password </label>
    <input type = "password" name = "user[password]">
    <label> Password Confirmation</label>  
    <input type ="password" name = "login[password_confirmation]">
    <input type= "submit" value = "register">
          <% if flash[:reg_errors]%>
                <div id = "errors">
                <% flash[:reg_errors].each do |error| %>
                <p class = "errors"><%= error %> </p>
           <% end %>
                </div>
<% end %>
</form>
          
<form id = "login" action="/users" method="post">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">    
    <h1> Login </h1>
    <label> Email </label>
    <input type= "text" name=login[email]>
    <label> Password </label>
    <input type = "password" name=login[password]>
    <input type = "submit" value = "login">
<p class = "errors"> <%= flash[:login_errors]%></p>
</form>

    
