<form action = "/update/<%= @user.id%>" method="post">
<input type = "hidden" name="_method" value="patch">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"> 
<label> First Name</label>
<input type = "text" name="first_name" placeholder="<%=@user.first_name%>">
<label> Last Name</label>
<input type = "text" name = "last_name" placeholder= "<%= @user.last_name%>">
<label> Email </label>
<input type = "email" name="email" placeholder="<%=@user.email%>">
<label> Location </label>
<input type = "text" name = "location" placeholder="<%=@user.location%>">
<label> State </label>
 <%=select_tag 'State', options_for_select(us_states),:name=>"state",:id=>"state"%>     
    <input type = "submit" value = "edit">
</form>
    <% if flash[:errors] %>
<p> <%= flash[:errors] %></p>
<% end %>
<a href="/events" method="post"> Back to Events</a>
