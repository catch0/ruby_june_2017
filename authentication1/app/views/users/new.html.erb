
<h2> Let's make a fucken user eh?</h2>
<div class = "form" id = "register">
<form action = "/users" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %> ">
        <div>
            <label> Nombre </label>
            <input type="text" name="user[name]">
            <label> Email </label>            
            <input type="email" name="user[email]">
            <label> Password </label>      
            <input type="password" name= "user[password]">
            <label> Password Confirmation</label>  
            <input type ="password" name = "user[password_confirmation]">
        </div>
        <input type = "submit" value="submit that sucka!">
    </form>
    <% if flash[:reg_errors] %> 
    <% flash[:reg_errors].each do |error| %>
    <p> <%= error %></p>
    <% end %>
    <% end %>
    <h2> Login </h2>
    <div class = "form" id = "login">
        <form action = "/sessions" method="post"> 
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %> ">
        <label> Email </label>
        <input type = "text" name = "login[email]">
        <label> Password </label>
        <input type = "password" name = "login[password]">
        <input type = "submit" value="lesgo!">
            <p class = "errors"> <%= flash[:login_errors] %></p>
        </form>
    </div>
</div>