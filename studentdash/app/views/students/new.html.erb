<h2> "Make" a new student!!!</h2>
<form action = "/students" method="post">
<input type = "hidden" name= "authenticity_token" value = "<%= form_authenticity_token %>">
<label> first name </label>
<input type = "text" name= "student[first_name]">
<label> last name </label>
<input type = "text" name= "student[last_name]">
<label> email </label>
<input type = "text" name= "student[email]">
<label> Dojo </label>
<select name="student[dojo_id]">
			<% @dojos.each do |dojo| %>
				<% if dojo == @dojo %>
					<option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
				<% else %>
					<option value="<%= dojo.id %>"><%= dojo.branch %></option>
				<% end %>
			<% end %>	
</select>
    <input type = "submit" value = "create a student"> 
</form>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>
<%= link_to "Back", root_path %>