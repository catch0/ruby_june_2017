<h1> Editing <%= @student.first_name %> profile </h1>
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<% end %>
<% end %>
<form action= "/student/update/<%= @student.id%>" method="post">
<input type = "hidden" name="_method" value="patch">
<input type = "hidden" name= "authenticity_token" value = "<%= form_authenticity_token %>">
<label> First Name </label>
    <input type="text" name = "student[first_name]" placeholder="<%= @student.first_name %>">
<label> Last Name </label>
<input type="text" name = "student[last_name]" placeholder="<%= @student.last_name %> ">
<label> Email </label>
<input type="text" name = "student[email]" placeholder="<%= @student.email %> ">      
    <select name="student[dojo_id]">
			<% @dojo.each do |dojo| %>
					<option selected value="<%= dojo.id %>"><%= dojo.branch %></option>
        <option value="<%= dojo.id %>"><%= dojo.branch %></option>
			<% end %>	
		</select>
<input type = "submit">
</form>
<%= link_to "Back", root_path %>